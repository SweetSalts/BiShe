<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stationlistsublayout"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:divider="#030303"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/stationimage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/staion_1"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="洛川苹果站"
            android:id="@+id/stationname"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/stationimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#030303"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_above="@+id/stationtype" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="站点类型：核心站"
            android:id="@+id/stationtype"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/stationimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#030303"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:singleLine="false" />

        <Button
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:focusable="true"
            android:text="进入站点"
            android:id="@+id/btnEnter"
            android:layout_below="@+id/stationtype"
            android:layout_marginRight="15dp"

            android:layout_alignBottom="@+id/stationimage"
            android:layout_alignEnd="@+id/stationtype"
            android:background="@color/blue"
            android:textSize="16dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>
</LinearLayout>