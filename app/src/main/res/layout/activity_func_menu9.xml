<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/station_list_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/onlinetalk_title_bg" >

        <ImageView
            android:id="@+id/doctor_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/doctor_back" />

        <TextView
            android:id="@+id/doctor_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/doctor_back_icon"
            android:clickable="true"
            android:text="@string/list_title_info"
            android:textColor="#ff3a4446"
            android:textSize="18sp" />
        
    </RelativeLayout>


    <GridView
        android:id="@+id/funcmenuGridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:horizontalSpacing="20dp"
        android:numColumns="auto_fit"
        android:paddingTop="35dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp" >
    </GridView>

</LinearLayout>